@using SaleOnline.Models
@{
    ViewBag.Title = "Index";
}


<!-- our_latest_blog_start -->
<div class="our_latest_blog">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-100">
                    <h3>Các bài viết giới thiệu về hạt giống cây trồng</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @{
                foreach (BaiViet k in Common.getArticles(3))
                {
                    <div class="col-xl-4 col-md-4">
                        <div class="single_latest_blog">
                            <div class="thumb">
                                <img src="@k.hinhDD" alt="">
                            </div>
                            <div class="content_blog">
                                <div class="date">
                                    <p>
                                        @string.Format("{0: MMM dd yyyy}", k.ngayDang) in
                                    <a href="#">@(k.loaiTin.Equals("COT") ? "Quảng Cáo" : "Tin Tức")</a>
                                </p>
                            </div>
                            <div class="blog_meta">
                                <h3><a href="@Url.Action("Index","ArticlesContent",new {maBV = k.maBV})">@k.tenBV</a></h3>
                            </div>
                            <p class="blog_text">
                                @k.ndTomTat.Substring(0, 100)
                            </p>
                        </div>
                    </div>
                </div>
            }
            }

        </div>
    </div>
</div>
<!-- our_latest_blog_end -->
@section QuangCao{

    <!-- slider_area_start -->
    <div class="slider_area ">
        <div class="single_slider d-flex align-items-center justify-content-center slider_bg_1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-xl-6 col-md-6">
                        <div class="illastrator_png">
                            <img src="~/Materials/Images/banner/edu_ilastration.png" alt="">
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6">
                        <div class="slider_info">
                            <h3>
                                Chào Mừng <br>
                                Các bạn đã <br>
                                Đến với Website của chúng tôi
                            </h3>
                            <a href="#" class="boxed_btn">Chào Bạn</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider_area_end -->

}

