@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link href="~/Content/all.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
     

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index","Dashboard")" class="nav-link">Home</a>
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/Materials/Images/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8" />

                <span class="brand-text font-weight-light">Quản Trị Hệ Thống</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">

                        <img src="~/Asset/Images/sanPham/gd1.jpg" class="img-circle elevation-2" alt="User Image" />

                    </div>
                    <div class="info">
                        <a href="#" class="d-block">LÂM TRUNG ĐỨC</a>
                    </div>
                </div>
                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Bài viết giới thiệu
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","NewArticle")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đăng Bài Viết <span class="right badge badge-danger">New</span></p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","Articles",new {IsActive =1 })' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Bài viết đã kiểm duyệt</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","Articles",new {IsActive =0})' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Bài viết đã cấm hiển thị</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Danh Mục Sản Phẩm
                                    <i class="fas fa-angle-left right"></i>
                                    <span class="badge badge-info right">6</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","CategoryOfProducts")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Chủng Loại - Nghành Hàng</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","NewProduct")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Sản Phẩm Mới</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","Products")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Sản Phẩm Kinh Doanh</p>
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href='@Url.Action("Index","Customers","0")' class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Danh sách khách hàng
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","Customers","1")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Khách hàng mới</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Danh sách khách hàng</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href='@Url.Action("Index","Orders","0")' class="nav-link">
                                <i class="nav-icon fas fa-tree"></i>
                                <p>
                                    Danh sách đơn hàng
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","Orders","1")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đơn hàng mới tạo</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","Orders","2")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đơn hàng đang xử lý </p>
                                    </a>
                                </li>
                                @*<li class="nav-item">
                                    <a href='@Url.Action("Index","Orders","3")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đang giao cho khách</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href='@Url.Action("Index","Orders","4")' class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đã giao thành công </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đơn Hàng Bị Hủy</p>
                                    </a>
                                </li>*@
                            </ul>
                        </li>


                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>




        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>



        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.2.0
            </div>
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>

    </div>

    <!-- jQuery -->

    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte.min.js"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="~/jss/demo.js"></script>
</body>
</html>